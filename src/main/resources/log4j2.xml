<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
    <Properties>
        <Property name="applicationName">${bundle:application:spring.application.name}</Property>
        <Property name="logPath">${sys:logPath:-/var/log}</Property>
    </Properties>

    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d [${applicationName}] [%p] [%c.%M(%L)] | %m\n" />
        </Console>

        <RollingFile name="RollingFile"
            fileName="${logPath}/${applicationName}.log"
            filePattern="${logPath}/${applicationName}-%d{yyyy-MM-dd}-%i.log.gz">
            <PatternLayout>
                <pattern>%d [${applicationName}] [%p] [%c{1}.%M(%L)] | %m\n</pattern>
            </PatternLayout>
            <Policies>
                <!-- rollover on startup, daily and when the file reaches 100 MegaBytes -->
                <OnStartupTriggeringPolicy />
                <SizeBasedTriggeringPolicy size="100 MB" />
                <TimeBasedTriggeringPolicy />
            </Policies>
            <DefaultRolloverStrategy max="100"/>
        </RollingFile>
    </Appenders>

    <Loggers>
        <Root level="info">
            <AppenderRef ref="Console" />
            <AppenderRef ref="RollingFile" />
        </Root>

        <Logger name="org.apache" level="warn"></Logger>
        <Logger name="org.hibernate" level="warn"></Logger>
        <Logger name="org.xnio" level="warn"></Logger>
        <Logger name="org.quartz" level="warn"></Logger>
        <Logger name="org.springframework" level="warn"></Logger>
        <Logger name="_org.springframework" level="warn"></Logger>
        <Logger name="org.jboss.resteasy" level="warn"></Logger>
        <Logger name="net.sf.jasperreports" level="warn"></Logger>
        <Logger name="eu.medsea.mimeutil" level="warn"></Logger>
        <Logger name="org.eclipse.jetty" level="warn"></Logger>
        <Logger name="io.undertow" level="warn"></Logger>
        <Logger name="io.grpc" level="warn"></Logger>
        <Logger name="com.zetra" level="debug"></Logger>
        <Logger name="org.springframework.web.servlet" level="warn"></Logger>
        <Logger name="org.springframework.web.HttpLogging" level="info"></Logger>
        <Logger name="org.springframework.web.client" level="info"></Logger>
    </Loggers>

</Configuration>
